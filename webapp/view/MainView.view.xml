<mvc:View controllerName="com.ui5.SAPUI5_Session.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<f:SimpleForm editable="true" singleContainerFullSize="false">
							<f:content>
								<Label text="{i18n>productId}"/>
								<Text text="{Product>/ProductDetails/ProductId}"/>
								<Label text="{i18n>productName}"/>
								<Text text="{Product>/ProductDetails/Name}"/>
								<Label text="MainCategory"/>
								<Text text="{Product>/ProductDetails/MainCategory}"/>
								<Label text="TaxTarifCode"/>
								<Text text="{Product>/ProductDetails/TaxTarifCode}"/>
							</f:content>
						</f:SimpleForm>
						<Table items="{Product>/ProductCollection}" growing="true" growingThreshold="10">
							<headerToolbar>
								<Toolbar>
									<content>
										<Title text="Products" level="Auto"/>
									</content>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column>
									<Text text="Prodcut Id"/>
								</Column>
								<Column>
									<Text text="Prodcut Name"/>
								</Column>
								<Column>
									<Text text="Main Category"/>
								</Column>
								<Column>
									<Text text="Supplier Name"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{Product>ProductId}"/>
										<Text text="{Product>Name}"/>
										<Text text="{Product>MainCategory}"/>
										<Text text="{Product>SupplierName}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>